<div class="container">
  <div class="row">
    <h2 class="mt-5">ゲーム登録</h2>
  </div>
  <%= form_with model: @game, url:'/games', local:true do |f| %>
    <div class="row mt-3">
      <div class="col-auto"><%= f.label :"ゲーム画像", class: "col-form-label"%></div>
      <div class="col-auto ml-5"><%= f.attachment_field :image %></div>
    </div>
    <div class="row mt-3">
      <div class="col-auto"><%= f.label :"ゲームタイトル", class: 'col-form-label mr-3' %></div>
      <div class="col-auto"><%= f.text_field :title, class: 'form-control' %></div>
    </div>
    <div class="col-auto mt-4">
      <%= f.submit "追加",class: 'btn btn-success' %>
    </div>
  <% end %>
</div>