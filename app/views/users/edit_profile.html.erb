<div>
  <div class="container form-box">
    <div class="row d-flex justify-content-center">
      <div class="col col-lg-8">
      <h3 class="text-center new-post">ユーザー設定</h3>
        <%= render 'users/error', user: @user %>
        <%= form_with model: @user, local: true do |f| %>
          <div class="mb-3 mt-4">
            <%= f.label :"ニックネーム", class: "from-control" %>
            <%= f.text_field :nickname, class: "form-control w-50" %>
          </div>
          <div>
            <%= f.label :"性別" %>
            <%= f.collection_check_boxs :gender, User.gender 
          </div>
          <div class="submit-btn">
            <%= f.submit "更新", class: "btn btn-lg btn-block btn-info mt-4" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>